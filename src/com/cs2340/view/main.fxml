<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs2340.controller.MainController">
  <children>
      <BorderPane prefHeight="393.0" prefWidth="640.0">
         <center>
            <Label alignment="TOP_CENTER" prefHeight="115.0" prefWidth="314.0" text="Welcome!&#10;This is the Main View" textAlignment="CENTER" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <HBox prefHeight="19.0" prefWidth="640.0" BorderPane.alignment="CENTER">
               <children>
                  <Button id="mainViewProfileButton" mnemonicParsing="false" onAction="#handleProfile" prefHeight="27.0" prefWidth="110.0" text="Profile">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Region prefHeight="25.0" prefWidth="406.0" />
                  <Button id="mainViewLogoutButton" mnemonicParsing="false" onAction="#handleLogout" prefHeight="27.0" prefWidth="126.0" text="Logout" />
               </children>
            </HBox>
         </top>
         <left>
            <Button id="mainViewSubmitButton" mnemonicParsing="false" onAction="#handleSourceReportSubmit" text="Submit report" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button id="mainViewReportButton" mnemonicParsing="false" onAction="#handleSourceReportView" text="View Report" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>

  </children>
</VBox>
