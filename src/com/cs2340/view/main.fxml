<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="499.0" prefWidth="726.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs2340.controller.MainController">
  <children>
      <BorderPane fx:id="mainViewBorderPane" prefHeight="498.0" prefWidth="750.0">
         <top>
            <HBox prefHeight="19.0" prefWidth="640.0" BorderPane.alignment="CENTER">
               <children>
                  <Button id="mainViewProfileButton" mnemonicParsing="false" onAction="#handleProfile" prefHeight="27.0" prefWidth="110.0" text="Profile">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Region prefHeight="25.0" prefWidth="493.0" />
                  <Button id="mainViewLogoutButton" mnemonicParsing="false" onAction="#handleLogout" prefHeight="27.0" prefWidth="126.0" text="Logout" />
               </children>
            </HBox>
         </top>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button id="mainViewSubmitButton" mnemonicParsing="false" onAction="#handleSourceReportSubmit" text="Submit Source Report" />
                  <Button id="mainViewReportButton" mnemonicParsing="false" onAction="#handleSourceReportView" text="View Source Reports" />
                  <Separator prefHeight="11.0" prefWidth="137.0" />
                  <Button fx:id="qualityReportSubmit" mnemonicParsing="false" onAction="#handleQualityReportSubmit" text="Submit Quality Report" />
                  <Button fx:id="qualityReportView" mnemonicParsing="false" onAction="#handleQualityReportView" text="View Quality Report" />
                  <Separator prefHeight="11.0" prefWidth="137.0" />
                  <Button fx:id="historySetup" mnemonicParsing="false" onAction="#handleHistorySetup" text="View Historical Report" />

               </children>
            </VBox>
         </left>
      </BorderPane>

  </children>
</VBox>
