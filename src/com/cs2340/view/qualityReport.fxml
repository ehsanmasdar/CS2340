<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs2340.controller.QualityReportController">
   <children>
      <Label text="Submit Water Quality Report:" />
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="Latitude" />
            <TextField fx:id="qualityLat" />
         </children>
      </HBox>
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="Longitude" />
            <TextField fx:id="qualityLon" />
         </children>
      </HBox>
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="Condition" />
            <ComboBox fx:id="qualityCondition" prefHeight="27.0" prefWidth="176.0" />
         </children>
      </HBox>
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="Virus PPM" />
            <TextField fx:id="qualityVirus" />
         </children>
      </HBox>
      <HBox prefHeight="31.0" prefWidth="600.0">
         <children>
            <Label text="Contaminant PPM" />
            <TextField fx:id="qualityContaminant" />
         </children>
      </HBox>
      <Button fx:id="qualitySubmit" mnemonicParsing="false" onAction="#handleSubmitPressed" text="Submit" />
      <Button fx:id="qualityCancel" mnemonicParsing="false" onAction="#handleCancelPressed" text="Cancel" />
   </children>
</VBox>
